{{!< default}}

<div class='o-wrapper'>

  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--full'>
      <div class='c-archive'>
        <h4 class='c-archive__title'>404</h4>
        <p class='c-archive__description'>{{t 'Page Not Found' }}</p>
      </div>
    </div>
  </div>

  <div class='o-grid'>
    {{#get 'posts' limit='6' include='authors'}}
      <div class='o-grid__col o-grid__col--full'>
        <h4 class='u-left'>{{t 'Recent Posts' }}</h4>
        <a href='{{ @site.url }}' class='u-right u-font-medium'>{{t 'Home Page' }} &#x27A3;</a>
      </div>
      {{#foreach posts}}
        {{> post-card }}
      {{/foreach}}
    {{/get}}
  </div>

</div>
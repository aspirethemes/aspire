<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--2-4-m o-grid__col--1-4-l'>
      <ul class='c-footer-list o-plain-list'>
        {{ navigation }}
      </ul>
    </div>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--1-3-m o-grid__col--2-4-m o-grid__col--1-4-l'>
      <ul class='c-footer-list o-plain-list'>
        {{#if @site.twitter}}
          <li>
            <a href='{{ twitter_url }}' target='_blank' rel='noopener noreferrer'>
              <span data-icon='ei-sc-twitter' data-size='s'></span>
              Twitter
            </a>
          </li>
        {{/if}}
        {{#if @site.facebook}}
          <li>
            <a href='{{ facebook_url }}' target='_blank' rel='noopener noreferrer'>
              <span data-icon='ei-sc-facebook' data-size='s'></span>
              Facebook
            </a>
          </li>
        {{/if}}
        <li>
          <a href='#' target='_blank' rel='noopener noreferrer'>
            <span data-icon='ei-sc-instagram' data-size='s'></span>
            Instagram
          </a>
        </li>
        <li>
          <a href='#' target='_blank' class='block' rel='noopener noreferrer'>
            <span data-icon='ei-sc-pinterest' data-size='s'></span>
            Pinterest
          </a>
        </li>
      </ul>
    </div>

    {{#unless @member}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-4-l'>
        <p class='u-font-medium'>{{t 'Newsletter' }}</p>
        {{> subscribe-form inputLabel='subscribe-email-footer'}}
      </div>
    {{/unless}}

    <div class='o-grid__col o-grid__col--full'>
      <div class='c-footer__copy'>
        <span class='u-font-tiny u-text-center u-block'>
          &copy; {{ date format='YYYY' }} {{ @site.title }} &ndash;
          {{{t 'Published with {ghostLink} & {themeLink}' ghostLink='<a href=\'https://ghost.org\'>Ghost</a>' themeLink='<a href=\'https://aspirethemes.com/themes/aspire\'>Aspire</a>' }}}
        </span>
      </div>
    </div>

  </div>
</footer>
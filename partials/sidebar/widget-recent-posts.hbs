{{#get 'posts' limit='3' include='authors' filter='id:-{{post.id}}' as |recent-posts|}}
  {{#if recent-posts}}
    <div class='c-widget'>
      <h3 class='c-widget__title'>{{t 'Recent Posts' }}</h3>

      {{#foreach recent-posts}}
        {{> sidebar/post-card}}
      {{/foreach}}
    </div>
  {{/if}}
{{/get}}